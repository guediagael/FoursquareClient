<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mircod.com.foursquareclient.components.ui.fragments.DetailsFragment">


    <TextView
        android:id="@+id/textVenuenameDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonClearDetails"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.08" />

    <TextView
        android:id="@+id/textCategoriesDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVenuenameDetails"
        app:layout_constraintRight_toLeftOf="@+id/buttonClearDetails"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.08" />

    <TextView
        android:id="@+id/textAddressDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/textCategoriesDetails"
        app:layout_constraintRight_toLeftOf="@+id/buttonClearDetails"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.08" />

    <TextView
        android:id="@+id/textDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/textAddressDetails"
        app:layout_constraintRight_toLeftOf="@+id/buttonClearDetails"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.08" />

    <TextView
        android:id="@+id/textRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDistance"
        app:layout_constraintRight_toLeftOf="@+id/buttonClearDetails"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.08" />

    <ImageButton
        android:id="@+id/buttonClearDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_clear_red_24dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>
